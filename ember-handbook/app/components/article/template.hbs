<article
  itemprop="mainContentOfPage"
  itemscope
  itemtype="https://schema.org/Article"
  ...attributes
>
  {{#if (has-block-params)}}
    {{yield
      (hash
        Header=(component
          "article/header" toc=this.toc title=this.title slug=this.slug
        )
        Body=(component "article/body")
        Footer=(component "article/footer")
      )
    }}
  {{else}}
    <Article::Header
      @toc={{this.toc}}
      @title={{this.title}}
      @slug={{this.slug}}
    />
    <Article::Body>
      {{yield}}
    </Article::Body>
  {{/if}}
</article>