{{#if (has-block-params)}}
  {{yield (hash
    Label=(component this.labelComponent for=this.id invoke=this.change)
    Switch=(component this.switchComponent id=this.id invoke=this.change checked=this.checked enabled=this.enabled)
  )}}
{{else if (has-block)}}
  {{#if @offLabel}}
    {{#component this.labelComponent value=false for=this.id invoke=this.change}}{{@offLabel}}{{/component}}
  {{/if}}

  {{component this.switchComponent checked=this.checked invoke=this.change enabled=this.enabled}}

  {{#component this.labelComponent for=this.id invoke=this.change}}
    {{yield}}
  {{/component}}

  {{#if @onLabel}}
    {{#component this.labelComponent value=true for=this.id invoke=this.change}}{{@onLabel}}{{/component}}
  {{/if}}
{{else}}
  {{#if @offLabel}}
    {{#component this.labelComponent value=false for=this.id invoke=this.change}}{{@offLabel}}{{/component}}
  {{/if}}

  <Toggle::Switch id={{this.id}} @checked={{this.checked}}
  @invoke={{this.change}} @enabled={{this.enabled}} />

  {{#if @label}}
    {{#component this.labelComponent for=this.id invoke=this.change}}{{@label}}{{/component}}
  {{/if}}

  {{#if @onLabel}}
    {{#component this.labelComponent value=true for=this.id invoke=this.change}}{{@onLabel}}{{/component}}
  {{/if}}
{{/if}}